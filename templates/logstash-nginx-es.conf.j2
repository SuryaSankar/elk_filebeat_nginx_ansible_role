input {
    beats {
        port => 5044
        ssl => true
        ssl_certificate_authorities => ["/etc/ssl/elk-certs/{{elk_server_fqdn}}.crt"]
        ssl_certificate => "/etc/ssl/elk-certs/{{elk_server_fqdn}}.crt"
        ssl_key => "/etc/ssl/elk-certs/{{elk_server_fqdn}}.key"
        ssl_verify_mode => "force_peer"
    }
}

filter {
    grok {
      match => ["message", "%{IPORHOST:remote_addr}%{GREEDYDATA:extra_data}"]
      remove_tag => [ "_grokparsefailure" ]
      add_tag => [ "nginx_access" ]
    }
    geoip {
      source => "remote_addr"
      target => "geoip"
      add_tag => [ "nginx-geoip" ]
    }
    date {
      match => [ "timestamp" , "dd/MMM/YYYY:HH:mm:ss Z" ]
      remove_field => [ "timestamp" ]
    }
    useragent {
      source => "http_user_agent"
    }
}

output {
 elasticsearch {
   hosts => ["localhost:9200"]
   manage_template => false
   index => "%{[@metadata][beat]}-%{[@metadata][version]}-%{+YYYY.MM.dd}"
 }
 stdout { codec => rubydebug }
}